{
  "name": "boundless-sdk",
  "version": "0.1.0",
  "description": "SDK for OpenLayers 3 and React plus Flux",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/boundlessgeo/sdk.git"
  },
  "scripts": {
    "start": "watchify js/tabbed.jsx -o dist/js/tabbed.js & watchify js/basic.jsx -o dist/js/basic.js & st -nc",
