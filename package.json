  },
  "devDependencies": {
    "babelify": "^6.0.2",
    "browserify": "^9.0.8",
    "browserify-css": "^0.6.1",
    "st": "^0.5.3",
    "watchify": "^3.2.0",
    "eslint": "^0.22.1",
    "eslint-plugin-react": "^2.5.0"
  },
  "peerDependencies": {
    "openlayers": "^3.4.0"
  },
  "browserify": {
    "transform": [
      "browserify-css",
      "babelify"
